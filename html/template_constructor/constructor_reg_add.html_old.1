<script>
function select_item (itm,value)
{
  var id = 'sel_'+itm
  var op =document.getElementById(id).options
  for (var i=0;i<op.length;i++)
  {
		if (op[i].value == value) {op[i].selected = true}
	}
}
function AddField(itm)
{
	var id = 'params_'+itm
	var d = new Date()
	var col = d.getTime()
	var newpar = '<span id=\"fld_'+itm+col+'\">Текст:<input name="text">&nbspЗначение:<input name="value">&nbsp<a href=\"#to_'+itm+'\" onclick=\"DelField(\''+itm+col+'\');\">Удалить</a><br></span>'
	document.getElementById(id).innerHTML += newpar
	col++
};
function DelField(num)
{
  document.getElementById('fld_'+num).innerHTML = ''
};
function view_params(itm,svalue)
{
	var id = 'params_'+itm
	var newpar = '<a href=#to'+itm+' onclick=\"AddField(\'' +itm+ '\');\">Добавить варианты</a><br>'
	switch (svalue)
	{
		case 'select': break;
		case 'checkbox': break;
		case 'radio': break;
		default : newpar = ''
	}
	document.getElementById(id).innerHTML = newpar
}
</script>

